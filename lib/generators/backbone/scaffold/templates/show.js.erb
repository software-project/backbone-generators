// Make sure the namespace has been setup
App.Views.<%= namespace %> || (App.Views.<%= namespace %> = {})

// A `Backbone.View` for displaying a <%= name %> and all its activities.
App.Views.<%= namespace %>.Show = Backbone.View.extend({

  // DOM event bindings. (Remove if not used)
  events: {
    // 'click .some-class': 'someAction'
  },

  // The model passed into the view can be any `App.Models.<%= name %>`.
  // Any changes to the model will cause this view to re-render.
  initialize: function() {
    _.bindAll(this, 'render');
    this.model.bind('change', this.render);
    this.render();
  },

  // Renders the view based on the `#<%= show_template_name %>` Handlebars.js template.
  render: function() {
    $(this.el).html(JST.<%= namespace.downcase %>_show_jst({ model: this.model }));
  }
});